{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

<h1>Categories</h1>

<table border="1">
    <thread>
        <tr>
            <th>Nom</th>
            <th>Creation</th>
        </tr>
    </thread>

    <tbody>
        {% for categorie in categories %}
            <tr>
                <td>
                    <a href="{{ path('show', {'id': categorie.id }) }}">
                        {{categorie.nom}}
                    </a>
                </td>   
                <td>{{categorie.creation|date('d/m/Y')}}</td>
                <td>
                <a href="{{ path('delete', {'id': categorie.id }) }}">
                        Supprimer
                    </a>
                </td>
            <tr>
        {% else %}
            <tr>
                <td>Il n'y a pas de catégories</td>
            <tr>
        {% endfor %}
    </tbody>
</table>

<h2>Ajouter une catégorie</h2>
{{ form(ajout) }}


{% endblock %}